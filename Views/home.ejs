<link rel="stylesheet" type="text/css" href="/css/home.css" />
<meta tag="viewport" content="width:device-width , initial-scale=1" />

<div id="outer">
  <section id="feed-posts">
    <!-- <h4>Posts</h4> -->
    <div id="create-post">
      <% if (locals.user) { %>
      <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="6"></textarea>
        <input class="Oauth" type="submit" value="Post" />
      </form>
      <% } %>
    </div>
    <div id="posts-container">
      <ul>
        <% for ( post of post_list) {%> <%- include('_post') %> <% } %>
      </ul>
    </div>
  </section>
  <div id="user-friends">
    <h4>Friends</h4>
    <% for ( u of all_users) { %>
    <div class="friend">
      <a href="/users/profile/<%= u.id %>"> <%= u.name %></a>
    </div>
    <% } %>
  <!-- <%- include ('_chat-box') %> -->
</div>

<script src="/js/home_posts"></script>
<script src="/js/home_comments_post.js"></script>
<script src="js/toggle_like.js"></script>
<script>
  $(".toggle-like").each(function () {
    let self = this;
    let toggleLike = new ToggleLike(self);
  });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.js"></script>
<script src="/js/chat_engine"></script>
<% if(locals.user){ %>
<script>
  new ChatEngine("user-chat-box", "<%= locals.user.email %>");
</script>
<% } %>
