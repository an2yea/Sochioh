<header>
  <link rel="stylesheet" type="text/css" href="/css/header" />
  <div id="Logo">
    <a href="/">
      <img src="/images/logo1.jpg" />
    </a>
  </div>
  <div id="nav">
    <% if(locals.user) { %>
    <ul id="logged-in">
      <li class="logged-in">
        <a href="/users/profile/<%= user.id %>">
          <img
            src="<%= user.avatar%>"
            alt="<%= user.name %>"
            height="40px"
            width="40px"
          />
          <%= user.name %>
        </a>
      </li>
      <li>
        <a href="/users/sign_out"> Sign Out </a>
      </li>
    </ul>
    <% } else { %>
    <ul id="logged-out">
      <li>
        <a href="/users/sign_in"> Sign In </a>
      </li>
      <li>
        <a href="/users/sign_up"> Sign Up</a>
      </li>
    </ul>
    <% } %>
  </div>
</header>
