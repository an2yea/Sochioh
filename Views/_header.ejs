<header>
  <link rel="stylesheet" type="text/css" href="/css/header.css" />
  <nav class="navbar navbar-expand-lg">
  <div class="navbar-brand" id="Logo">
    <a href="/">
      <img src="/images/logo1.jpg" />
    </a>
  </div>
  <button class="navbar-toggler" style="color: black;" type="button" data-toggle="collapse" data-target="#navigate" aria-controls="navigate" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse " id="navigate">
    <% if(locals.user) { %>
    <ul class="navbar-nav ml-auto" id="logged-in">
      <li class="nav-item logged-in">
        <a class="nav-link" href="/users/profile/<%= user.id %>">
          <% if(user.avatar) {%>
            <img
            src="<%= user.avatar%>"
            alt="<%= user.name %>"
            height="40px"
            width="40px"
          />
          <%} else {%>
            <img src="../uploads/blank-profile-picture-973460_640.png" height="40px"
            width="40px">
          <% } %>
          
        </a>
      </li>
      <li class ="nav-item" style="margin-top:3%">
        <a class="nav-link" href="/users/profile/<%= user.id %>">
          <%= user.name %>
        </a>
      </li>
      <li class='nav-item' style="margin-top:3%">
        <a class="nav-link" href="/users/sign_out"> Sign Out </a>
      </li>
    </ul>
   
    <% } %>
  </div>
</nav>
</header>
